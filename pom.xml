<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <!-- Bezeichnung des Maven-Projekts (ArtifactId, name) -->
    <artifactId>Personenregister</artifactId>
    <name>Personenregister</name>
    
    <!-- Eltern-Maven-Projekt, auf welchem dieses Projekt aufbaut -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.8.RELEASE</version>
    </parent>
    
    <!-- Verschiedene Eigenschaften, die von Maven und untenstehender Dependency-Deklarationen genutzt werden -->
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <camunda.version>7.8.0</camunda.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <camunda-bpm-spring-boot-starter.version>2.3.0</camunda-bpm-spring-boot-starter.version>
    </properties>
    
    <!-- Definiert camunda-bom als zentrale Dependency, welche sicherstellt, dass
         die verschiedenen Dependencies von Camunda alle zur camunda.version passen -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.camunda.bpm</groupId>
                <artifactId>camunda-bom</artifactId>
                <version>${camunda.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>
    
    <!-- Auflistung der verschiedenen über das Parent-Projekt hinausgehenden Abhängigkeiten -->
    <dependencies>
        <!-- Camunda Spring Boot Starter für die Camunda Plattform (v.a. Engine) -->
        <dependency>
            <groupId>org.camunda.bpm.springboot</groupId>
            <artifactId>camunda-bpm-spring-boot-starter</artifactId>
            <version>${camunda-bpm-spring-boot-starter.version}</version>
        </dependency>
	
        <!-- Camunda Spring Boot Starter für die Webapps (Tasklist & Co.) -->
        <dependency>
            <groupId>org.camunda.bpm.springboot</groupId>
            <artifactId>camunda-bpm-spring-boot-starter-webapp</artifactId>
            <version>${camunda-bpm-spring-boot-starter.version}</version>
        </dependency>
	
        <!-- Camunda Spring Boot Starter für die REST API -->
        <dependency>
            <groupId>org.camunda.bpm.springboot</groupId>
            <artifactId>camunda-bpm-spring-boot-starter-rest</artifactId>
            <version>${camunda-bpm-spring-boot-starter.version}</version>
        </dependency>
	
        <!-- Spring Framework -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>
        
        <!-- Spring Boot Starter für JPA -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
    
        <!-- Unterstützung für filebased und In-Memory-H2-Datenbank -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
        </dependency>
        
        <!-- Camunda Spring Boot Starter für automatisierte Test (BPM Asserts) -->
        <dependency>
            <groupId>org.camunda.bpm.springboot</groupId>
            <artifactId>camunda-bpm-spring-boot-starter-test</artifactId>
            <version>${camunda-bpm-spring-boot-starter.version}</version>
            <scope>test</scope>
        </dependency>
	
        <!-- Unterstützung für JDBC aus Spring Framework heraus -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
        </dependency>
        
        <!-- 
        *** 
        * Alle folgenden Abhaengigkeiten sind im Zusammenhang mit SOAP-Web 
        * Services erforderlich:
        * cxf-rt-frontend-jaxws -> Java API for XML Web Services-Komponenten
        * cxf-rt-transports-http -> CXF-Servlet-Komponenten
        * stax2-api und woodstox-core-asl -> Erforderlich wegen Bug, der hier 
        * beschrieben ist: https://stackoverflow.com/questions/20114945/cxf-web-service-client-cannot-create-a-secure-xmlinputfactory
        ***
        -->
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-frontend-jaxws</artifactId>
            <version>3.2.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-transports-http</artifactId>
            <version>3.2.0</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.woodstox</groupId>
            <artifactId>stax2-api</artifactId>
            <version>4.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.woodstox</groupId>
            <artifactId>woodstox-core-asl</artifactId>
            <version>4.4.1</version>
        </dependency>
    </dependencies>
    
    <build>
        <!-- Beim Build-Prozess genutzte Plugins -->
        <plugins>
            <!-- Spring Boot Maven Plugin, um auch aus der Kommandozeile die Applikation zu starten -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <!-- 
            ***
            * Das JAXB2-Plugin ist erforderlich, um aus XML Schema Definitions
            * f�r JAX-WS annotierte Java-Klassen zu generieren. Die Dokumentation
            * befindet sich in http://www.mojohaus.org/jaxb2-maven-plugin/Documentation/v2.2/
            ***
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!-- Ablageort der Binding-Configuration-Datei
                         noch zu pr�fen ob wir hier etwas customizen m�ssen -->
                    <xjbSources>
                        <xjbSource>src/main/resources/global.xjb</xjbSource>
                    </xjbSources>
                    <!-- Ablageort der XML Schema-Definition -->
                    <sources>
                        <source>src/main/resources/eCH-0194-1-0.xsd</source>
                    </sources>
                    <!-- Ablageort f�r die generierten Java-Klassen -->
                    <outputDirectory>target/generated-sources/jaxb2-maven-plugin</outputDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
